{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./bundle/",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },

  "exclude": ["./cypress.config.ts", "node_modules", "cypress"],

  "ts-node": {
    "compilerOptions": {
      "module": "commonJS"
    }
  }
}
